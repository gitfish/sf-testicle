{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "target": "es5",
        "allowJs": false,
        "experimentalDecorators": true,
        "outDir": "lib",
        "lib": ["es5", "scripthost", "es2017"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}